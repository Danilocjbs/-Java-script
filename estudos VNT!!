    <script>
        function verificaViagem() {
            var saldo = +prompt("digite o seu saldo: ");
            if (saldo >= 10000) {
                alert("parabens!! sua viagem para europa chegou!!");
            } else {
                if (saldo >= 3000) {
                    alert("com essa quantia voce podera viajar pelo brasil!!!");
                } else {
                } alert("fique em casa e aproveite suas ferias descansando ");
            }
        } 
    </script>
</head>

<body>
    <button onclick="verificaViagem()">consultar</button>
</body>
</html>




