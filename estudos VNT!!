    <script>
        var numero = +prompt("Digite um numero!")
        if(numero == 1){
            alert("Um não é condsiderado no exercico, digite outro numero");
        }
        for (var i = 2; i <= numero; i++) {
            
            if (numero % i == 0) {
                alert("nao e primo!!!")
                break;
            }
            else {
                alert(" e primo!!!")
            }
        }

    </script>
</head>

